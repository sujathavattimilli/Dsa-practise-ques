public static void pattern_making(int n){
    int i=0; int j=0; int k=n-1;
   for(i=1;i<=n;i++){
       for(j=1;j<=i;j++){
           System.out.print(j+" ");
       }
       for(j=j-2;j>=1;j--){
           System.out.print(j+" ");
       }
       System.out.print("\n");
   }
   for(i=k;i>=1;i--){
       for(j=1;j<=i;j++){
           System.out.print(j+" ");
       }
       for(j=j-2;j>=1;j--){
           System.out.print(j+" ");
       }
      System.out.print("\n");
   }
}
